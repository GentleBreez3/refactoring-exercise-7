<h1>Users</h1>

   <table>
     <thead>
        <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Details</th>
        <th colspan="3"></th>
       </tr>
     </thead>

     <tbody>
       <% @users.each do |user| %>
         <tr>
           <td><%= user.name %></td>
           <td><%= user.email %></td>
           <td><%= link_to 'Show', user %></td>
         </tr>
       <% end %>
      </tbody>
   </table>
   <%= link_to("Sign Out", destroy_user_session_path, :method => :delete) %>